<style>
    .logout {
        text-decoration: none;
        color: rgb(114, 9, 121);
    }

    .color {
        background: rgb(114, 9, 121);
        background: linear-gradient(to left, rgba(114, 9, 121, 1) 33%, rgba(23, 162, 184, 1) 100%);
    }

    .borderP {
        border-width: 3px;
        border-style: solid;
        border-image:
            linear-gradient(to bottom,
                rgba(114, 9, 121, 1),
                rgba(23, 162, 184, 1)) 1 100%;
    }

    .btn-grad {
        background-image: linear-gradient(to right,  rgba(114, 9, 121, 1) 33%, rgba(23, 162, 184, 1) 100%)
    }

    .btn-grad {
        margin: 10px;
        padding: 15px 45px;
        text-align: center;
        text-transform: uppercase;
        transition: 0.5s;
        background-size: 200% auto;
        color: white;
        box-shadow: 0 0 20px #eee;
        border-radius: 10px;
    }

    .btn-grad:hover {
        background-position: right center;
        /* change the direction of the change here */
        color: #fff;
        text-decoration: none;
    }
    .status-grad{
        border-width: 3px;
        border-style:dotted;
        padding: 5px;
        border-image:
            linear-gradient(to bottom,
                rgba(114, 9, 121, 1),
                rgba(23, 162, 184, 1)) 1 100%;
    }
</style>

