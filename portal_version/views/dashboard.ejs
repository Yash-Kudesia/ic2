<%- include('header') -%>

<div class="text-center center-div mb-5" id="login">
    <div class="container borderP py-5 mt-5">
        <h3>IC2 Dashboard</h3>
        <p>User: <%= locals.user ? user : "User" %></p>
        <a class="logout" href="/route/logout">Logout</a>
        <div class="text-center d-flex flex-row justify-content-around mb-3">
            <form action="/route/random" method="POST" class="pt-3">
                <button type="submit" class="text-center btn btn-grad mt-3">Random PC</button>
            </form>
            <form action="/route/custom" method="POST" class="pt-3">
                <button type="submit" class="text-center btn btn-grad mt-3">Custom PC</button>
            </form>
        </div>
        <div class="d-flex flex-row justify-content-around">
            <% if(locals.token_status){ %>
                <p class="status-grad" style="width: fit-content;"><b>Application Status : </b> Token Generated</p>
                <p class="status-grad"  style="width: fit-content;"> <b>User Token : </b> <%= token %></p>
            <% } %>
        </div>
       
    </div>
</div>

<%- include('footer') -%>